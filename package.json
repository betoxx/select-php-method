{
  "publisher": "AlbertoBartsch",
  "name": "select-php-method",
  "displayName": "Select PHP Method",
  "description": "Selecciona y copia métodos completos de clases PHP, incluyendo comentarios PHPDoc, con un atajo de teclado Ctrl+Alt+M. Ideal para desarrolladores PHP que necesitan manejar código rápidamente.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:extension.selectPhpMethod"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.selectPhpMethod",
        "title": "Select and Copy PHP Method"
      }
    ],
    "keybindings": [
      {
        "command": "extension.selectPhpMethod",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}